<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ShoppingList.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ShoppingList"
    xmlns:views="clr-namespace:ShoppingList.Views"
    Shell.FlyoutBehavior="Flyout"
    Title="Shopping List"
    BackgroundColor="DarkOrange">

    <ShellContent
        Title="Shopping list"
        ContentTemplate="{DataTemplate views:MainPage}"
        Route="ShoppingList"/>

    <ShellContent
        Title="Add products and categories"
        ContentTemplate="{DataTemplate views:AddProductPage}"
        Route="AddProduct"/>

    <ShellContent
        Title="List for shop"
        ContentTemplate="{DataTemplate views:ListForShopPage}"
        Route="ListForShop"/>

    <ShellContent
        Title="Recipes"
        ContentTemplate="{DataTemplate views:RecipesPage}"
        Route="recipes"/>

    <ShellContent
        Title="Recipe creator"
        ContentTemplate="{DataTemplate views:RecipeCreatorPage}"
        Route="recipeCreator"/>


</Shell>
