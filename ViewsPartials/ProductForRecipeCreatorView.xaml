<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:ShoppingList.Models"
             x:Class="ShoppingList.ViewsPartials.ProductForRecipeCreatorView"
             x:DataType="models:Product"
             x:Name="this">
    <Border Stroke="LightGray"
            StrokeThickness="1">
        <Grid BackgroundColor="White">
            <Grid.RowDefinitions>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!--Label visible if product is optional -->
            <CheckBox IsChecked="{Binding IsOptional}"
                      Grid.Column="0"
                      HorizontalOptions="End"
                      Margin="20, 0, 0, 0"
                      Color="Orange"/>
            <Label Text="(Optional)" 
                   TextColor="DarkGray"
                   Grid.Column="1"
                   FontSize="20"
                   HorizontalOptions="Start"
                   Margin="20"/>

            <!--Product name -->
            <Entry Placeholder="Name"
                   Text="{Binding Name}" 
                   TextColor="Black"
                   Grid.Column="2"
                   FontSize="20"
                   WidthRequest="200"
                   HorizontalOptions="Start"
                   Margin="20"/>

            <!-- Quantity of product-->
            <Entry Placeholder="Quantity"
                   Text="{Binding Quantity}" 
                   TextColor="Black"
                   Grid.Column="3"
                   FontSize="20"
                   HorizontalOptions="End"
                   VerticalOptions="Center"
                   HeightRequest="20"
                   WidthRequest="100">
            </Entry>

            <!--Product unit -->
            <Entry Placeholder="Unit"
                   Text="{Binding Unit}" 
                   TextColor="Black"
                   Grid.Column="4"
                   FontSize="20"
                   VerticalOptions="Center"
                   HorizontalOptions="Start"
                   WidthRequest="100"/>
            
            <!--Shop label-->
            <Label Text="{Binding Shop}" 
                   TextColor="Black"
                   Grid.Column="5"
                   FontSize="20"
                   VerticalOptions="Center"
                   WidthRequest="100"/>

            <!--Delete product button -->
            <Button Text="X"
                    Grid.Column="6"
                    HeightRequest="20"
                    Command="{Binding BindingContext.RemoveProductCommand, Source={RelativeSource AncestorType={x:Type ContentPage}}}"
                    CommandParameter="{Binding}"
                    BackgroundColor="IndianRed"
                    BorderColor="Black"
                    BorderWidth="1"
                    HorizontalOptions="End"
                    Margin="0, 0, 20, 0"/>
        </Grid>
    </Border>
</ContentView>
