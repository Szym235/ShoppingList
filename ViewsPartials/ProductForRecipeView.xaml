<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:ShoppingList.Models"
             x:Class="ShoppingList.ViewsPartials.ProductForRecipeView"
             x:DataType="models:Product"
             x:Name="this">
    <Border Stroke="LightGray"
            StrokeThickness="1">
        <Grid BackgroundColor="White">
            <Grid.RowDefinitions>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!--Label visible if product is optional -->
            <Label Text="(Optional)" 
                   TextColor="DarkGray"
                   Grid.Column="0"
                   FontSize="20"
                   HorizontalOptions="Center"
                   Margin="20">
                <Label.Triggers>
                    <DataTrigger TargetType="Label"
                                 Binding="{Binding IsOptional}"
                                 Value="False">
                        <Setter Property="IsVisible"
                                Value="False"/>
                    </DataTrigger>
                    <DataTrigger TargetType="Label"
                                 Binding="{Binding IsOptional}"
                                 Value="True">
                        <Setter Property="IsVisible"
                                Value="True"/>
                    </DataTrigger>
                </Label.Triggers>
            </Label>

            <!--Product name -->
            <Label 
                   Text="{Binding Name}" 
                   TextColor="Black"
                   Grid.Column="1"
                   FontSize="20"
                   HorizontalOptions="Start"
                   Margin="20"/>

            <!-- Quantity of product-->
            <Label Text="{Binding Quantity}" 
                   TextColor="Black"
                   Grid.Column="2"
                   FontSize="20"
                   HorizontalOptions="End"
                   VerticalOptions="Center">
            </Label>

            <!--Product unit -->
            <Label Text="{Binding Unit}" 
                   TextColor="Black"
                   Grid.Column="3"
                   FontSize="20"
                   VerticalOptions="Center"
                   HorizontalOptions="Start"/>
        </Grid>
    </Border>
</ContentView>
