<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:ShoppingList.Models"
             x:Class="ShoppingList.ViewsPartials.ProductView"
             x:DataType="models:Product"
             x:Name="this">
    <Grid BackgroundColor="White">
        <Grid.Triggers>
            <DataTrigger TargetType="Grid"
                     Binding="{Binding IsBought}"
                     Value="True">
                <Setter Property="BackgroundColor"
                        Value="DarkGray"/>
            </DataTrigger>
            <DataTrigger TargetType="Grid"
                     Binding="{Binding IsBought}"
                     Value="False">
                <Setter Property="BackgroundColor"
                        Value="White"/>
            </DataTrigger>
        </Grid.Triggers>
        <Grid.RowDefinitions>
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <CheckBox IsChecked="{Binding IsBought}"
                  Grid.Column="0"
                  HorizontalOptions="Center"
                  Margin="20, 0, 0, 0"/>
        <Label Text="{Binding Name}" 
               Style="{StaticResource ProductLabelTrigger}"
               TextColor="Black"
               Grid.Column="1"
               FontSize="20"
               HorizontalOptions="Center"
               Margin="20">
        </Label>
        <Button Text="-"
                Grid.Column="2"
                HeightRequest="20"
                Command="{Binding DecrementQuantityCommand}"/>
        <Entry Text="{Binding Quantity}" 
               TextColor="Black"
               Grid.Column="3"
               FontSize="20"
               HorizontalOptions="End"
               HeightRequest="20"/>
        <Label Text="{Binding Unit}" 
               TextColor="Black"
               Grid.Column="4"
               FontSize="20"
               HorizontalOptions="Start"
               Margin="0, 20, 0, 20"/>
        <Button Text="+" 
                Grid.Column="5" 
                HeightRequest="20"
                Margin="0, 0, 20, 0"
                Command="{Binding IncrementQuantityCommand}"/>
        <Button Text="X"
                Grid.Column="6"
                HeightRequest="20"
                Command="{Binding BindingContext.RemoveProductCommand, Source={RelativeSource AncestorType={x:Type ContentPage}}}"
                CommandParameter="{Binding}"/>
    </Grid>
</ContentView>
