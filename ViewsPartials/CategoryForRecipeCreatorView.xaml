<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShoppingList.ViewsPartials.CategoryForRecipeCreatorView"
             xmlns:models="clr-namespace:ShoppingList.Models"
             xmlns:viewPartials="clr-namespace:ShoppingList.ViewsPartials"
             x:DataType="models:Category">
    <VerticalStackLayout>
        <Label Text="{Binding Name}"
                       FontSize="20"
                       VerticalOptions="Center"/>
        <ListView ItemsSource="{Binding Products}" >
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="models:Product">
                    <ViewCell>
                        <viewPartials:ProductForRecipeCreatorView/>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </VerticalStackLayout>
</ContentView>
