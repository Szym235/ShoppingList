<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShoppingList.ViewsPartials.ExportOptionsView"
             xmlns:viewModels="clr-namespace:ShoppingList.ViewModels"
             x:DataType="viewModels:AllProducts">
    <Border Stroke="Orange">
        <HorizontalStackLayout>
            <Button Text="Import" 
                    BackgroundColor="White"
                    TextColor="Black"
                    Command="{Binding ImportProductsCommand}"/>
            <Button Text="Export" 
                    BackgroundColor="White"
                    TextColor="Black"
                    Command="{Binding ExportProductsCommand}"/>
            
        </HorizontalStackLayout>
    </Border>
</ContentView>
