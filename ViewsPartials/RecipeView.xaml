<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShoppingList.ViewsPartials.RecipeView"
             xmlns:models="clr-namespace:ShoppingList.Models"
             xmlns:viewPartials="clr-namespace:ShoppingList.ViewsPartials"
             x:DataType="models:Recipe">
    <Border>
        <VerticalStackLayout>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Label Text="{Binding Name}"
                       Grid.Column="0"
                       FontSize="25"
                       VerticalOptions="Center"
                       Margin="20, 0, 0, 0"
                       HorizontalOptions="Start"/>
                <Button Text="Add to list"
                        Grid.Column="1"
                        Command="{Binding AddRecipeToListCommand}"
                        WidthRequest="180"
                        FontSize="20"
                        Margin="0, 5, 20, 5"
                        HorizontalOptions="End"/>
            </Grid>
            <ListView ItemsSource="{Binding Categories}">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="models:Category">
                        <ViewCell>
                            <viewPartials:CategoryForRecipeView/>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </VerticalStackLayout>
    </Border>
</ContentView>
