<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShoppingList.Views.RecipeCreatorPage"
             Title="RecipeCreatorPage"
             xmlns:viewModels="clr-namespace:ShoppingList.ViewModels"
             xmlns:viewPartials="clr-namespace:ShoppingList.ViewsPartials"
             xmlns:models="clr-namespace:ShoppingList.Models"
             x:DataType="viewModels:RecipeCreator">
    <VerticalStackLayout>
        <Entry Text="{Binding RecipeForCreation.Name}"
               FontSize="20"
               Margin="10"/>
        <Button Text="Add product"
                Command="{Binding AddProductCommand}"/>
        <ListView ItemsSource="{Binding RecipeForCreation.Categories}">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="models:Product">
                    <ViewCell>
                        <viewPartials:ProductForRecipeCreatorView/>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </VerticalStackLayout>
</ContentPage>