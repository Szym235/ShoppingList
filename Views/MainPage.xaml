<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="ShoppingList.Views.MainPage"
    xmlns:models="clr-namespace:ShoppingList.Models"
    xmlns:viewPartials="clr-namespace:ShoppingList.ViewsPartials"
    xmlns:viewModels="clr-namespace:ShoppingList.ViewModels"
    BackgroundColor="White">

    <VerticalStackLayout>
        <Label Text="Your list:"
               TextColor="Black"
               FontSize="20"
               Margin="5, 0, 0, 0"></Label>
        <ListView ItemsSource="{Binding Products}"
                  Margin="5, 20, 5, 20">
            <ListView.ItemTemplate>

                <DataTemplate x:DataType="models:Product">
                    <ViewCell>
                        <viewPartials:ProductView/>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Button Text="Save"
                Command="{Binding SaveProductsCommand}"
                WidthRequest="100"
                BackgroundColor="DarkOrange"
                HorizontalOptions="Start"
                Margin="5, 0, 0, 0"></Button>
    </VerticalStackLayout>

</ContentPage>