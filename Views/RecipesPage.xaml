<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShoppingList.Views.RecipesPage"
             xmlns:viewModels="clr-namespace:ShoppingList.ViewModels"
             xmlns:models="clr-namespace:ShoppingList.Models"
             xmlns:viewPartials="clr-namespace:ShoppingList.ViewsPartials"
             x:DataType="viewModels:AllRecipes"
             Title="Recipes">
    <VerticalStackLayout>
        <ListView ItemsSource="{Binding Recipes}" Margin="5">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell  x:DataType="models:Recipe">
                        <viewPartials:RecipeView/>
                    </ViewCell> 
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </VerticalStackLayout>
</ContentPage>